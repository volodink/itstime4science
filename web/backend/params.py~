#!/usr/bin/python
# -*- coding: UTF-8 -*-

import sys

if __name__ == "__main__":
    if len (sys.argv) == 1:
    else:
        if len (sys.argv) < 3:
            print ("Ошибка. Слишком мало параметров.")
            sys.exit (1)

        if len (sys.argv) > 3:
            print ("Ошибка. Слишком много параметров.")
            sys.exit (1)

        param_host = sys.argv[1]
        param_port = sys.argv[2]

        if (param_host == "-h"and param_port == "-p"):
            print ("Host {}, port {}".format (param_host,param_port) )
        else:
            print ("Ошибка. Неизвестный параметр" )
            sys.exit (1)
